{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "OpenClaw recipe ingest payload",
  "type": "object",
  "additionalProperties": false,
  "required": ["recipes"],
  "properties": {
    "recipes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["title", "slug", "date", "summary", "ingredients", "steps"],
        "properties": {
          "title": {"type": "string", "minLength": 3, "maxLength": 120},
          "slug": {"type": "string", "pattern": "^[a-z0-9-]+$"},
          "date": {"type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$"},
          "summary": {"type": "string", "minLength": 10, "maxLength": 400},
          "tags": {"type": "array", "items": {"type": "string", "minLength": 2, "maxLength": 30}},
          "prep_time": {"type": "string", "maxLength": 40},
          "cook_time": {"type": "string", "maxLength": 40},
          "serves": {"type": "string", "maxLength": 40},
          "image": {"type": "string", "maxLength": 200},
          "source": {"type": "string", "maxLength": 200},
          "ingredients": {"type": "array", "minItems": 1, "items": {"type": "string", "minLength": 2, "maxLength": 200}},
          "steps": {"type": "array", "minItems": 1, "items": {"type": "string", "minLength": 2, "maxLength": 800}},
          "notes": {"type": "array", "items": {"type": "string", "minLength": 2, "maxLength": 300}}
        }
      }
    }
  }
}
